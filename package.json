{
  "private": true,
  "name": "fastingtime",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run -s serve || npm run -s dev",
    "build": "preact build --dest dist --template src/template.html",
    "serve": "preact build && preact serve",
    "dev": "preact watch",
    "test": "jest",
    "precommit": "pretty-quick --staged",
    "lint": "eslint ./src"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-jest": "^22.6.4",
    "eslint-plugin-react": "^7.13.0",
    "husky": "^1.3.1",
    "identity-obj-proxy": "^3.0.0",
    "if-env": "^1.0.0",
    "jest": "^24.7.1",
    "preact-cli": "^2.2.1",
    "preact-render-spy": "^1.2.1",
    "prettier": "1.16.4",
    "pretty-quick": "^1.10.0"
  },
  "dependencies": {
    "date-fns": "^1.30.1",
    "emotion": "^10.0.9",
    "eslint-config-unobtrusive": "^1.2.2",
    "hijri-date": "^0.2.2",
    "preact": "^8.4.2",
    "preact-async-route": "^2.2.1",
    "preact-compat": "^3.18.5",
    "preact-emotion": "^9.2.12",
    "preact-router": "^2.6.1",
    "requestanimationframe-timer": "^1.0.4"
  },
  "jest": {
    "verbose": true,
    "setupFiles": [
      "<rootDir>/src/tests/__mocks__/browserMocks.js"
    ],
    "testURL": "http://localhost:8080",
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/src/tests/__mocks__/fileMocks.js",
      "\\.(css|less|scss)$": "identity-obj-proxy",
      "^./style$": "identity-obj-proxy",
      "^preact$": "<rootDir>/node_modules/preact/dist/preact.min.js",
      "^react$": "preact-compat",
      "^react-dom$": "preact-compat",
      "^create-react-class$": "preact-compat/lib/create-react-class",
      "^react-addons-css-transition-group$": "preact-css-transition-group"
    }
  }
}
